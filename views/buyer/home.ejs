<%- include('../partials/header'); -%>

<body>
	<nav class="navbar navbar-expand-lg navbar-light bg-light">
	  <a class="navbar-brand" href="/buyer/home">ShopHop</a>
	  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
		<span class="navbar-toggler-icon"></span>
	  </button>
	  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
		<div class="navbar-nav">
		  <a class="nav-item nav-link active" href="/buyer/home">Home <span class="sr-only">(current)</span></a>
		  <a class="nav-item nav-link" href="#">About Us</a>
		  <a class="nav-item nav-link" href="#">Contact</a>
		  <a class="nav-item nav-link" href="#">FAQ</a>
		</div>
		<form class="form-inline my-2 my-lg-0 px-2" action="/buyer/cart" method="GET">
			<button class="btn btn-outline-info my-2 my-sm-0">My Cart</button>
		</form>
		<form class="form-inline my-2 my-lg-0 px-2" action="/buyer/order" method="GET">
			<button class="btn btn-outline-primary my-2 my-sm-0">My Orders</button>
		</form>
		<form class="form-inline my-2 my-lg-0 px-2" action="/buyer/logout" method="POST">
			<button class="btn btn-outline-danger my-2 my-sm-0">Logout</button>
		</form>
	  </div>
	</nav>
	<div class="jumbotron">
		<h1>Welcome <%= username%></h1>
		<h5>Welcome to ShopHop. Shop from our wide range of products!</h5>
		<div class="container">
		       <div class="row text-center" style="display:flex; flex-wrap: wrap;">
			<% products.forEach(function(product){ %>
			    <div class="col-sm-6 col-md-4 col-lg-3 d-flex align-items-stretch py-3">
					<div class="card" style="width: 18rem;">
					  <img class="card-img-top" style="height: 15rem;" src="/images/<%= product.images[0]%>" alt="Card image cap">
					  <div class="card-body">
						<h5 class="card-title"><%= product.title %></h5>
						<h6 class="card-text">Price: â‚¹ <%= product.price %></h6>
						<p class="card-text">Category: <%= product.category %></p>
						<p class="card-text">Sold By: <%= product.soldby.username %></p>
						<form action="/buyer/view/<%= product._id %>" method="POST">
							<button type="submit" class="btn btn-info btn-sm mb-1">View</button>
						</form>
						<form action="/buyer/addtocart/<%= product._id %>" method="POST">
							<button type="submit" class="btn btn-primary btn-sm">Add to Cart</button>
						</form>
					  </div>
					</div>
				</div>
			<% }); %>
			</div>
		</div>
	</div>
</body>
</html>
