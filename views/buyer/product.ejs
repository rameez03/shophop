<%- include('../partials/header'); -%>

<body>
	<nav class="navbar navbar-expand-lg navbar-light bg-light">
	  <a class="navbar-brand" href="#">ShopHop</a>
	  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
		<span class="navbar-toggler-icon"></span>
	  </button>
	  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
		<div class="navbar-nav">
		  <a class="nav-item nav-link active" href="#">Home <span class="sr-only">(current)</span></a>
		  <a class="nav-item nav-link" href="#">About Us</a>
		  <a class="nav-item nav-link" href="#">Contact</a>
		  <a class="nav-item nav-link" href="#">FAQ</a>
		</div>
		<form class="form-inline my-2 my-lg-0 px-2" action="/buyer/cart" method="GET">
			<button class="btn btn-outline-info my-2 my-sm-0">My Cart</button>
		</form>
		<form class="form-inline my-2 my-lg-0 px-2" action="/buyer/order" method="GET">
			<button class="btn btn-outline-primary my-2 my-sm-0">My Orders</button>
		</form>
		<form class="form-inline my-2 my-lg-0 px-2" action="/buyer/logout" method="POST">
			<button class="btn btn-outline-danger my-2 my-sm-0">Logout</button>
		</form>
	  </div>
	</nav>
	<div class="jumbotron mx-auto">
	   <div class="mx-auto">
		<div class="card mx-auto" style="width: 18rem;">
		  <div class="card-body">
		    <h5 class="card-title"><%= product.title %></h5>
		    <p class="card-text"><%= product.description %></p>
		    <h6 class="card-subtitle mb-2 text-muted">â‚¹ <%= product.price %></h6>
		    <a href="/buyer/home" class="card-link">Back to Homepage</a>
		    <form action="/buyer/addtocart/<%= product._id %>" method="POST">
				<button type="submit" class="btn btn-primary btn-sm">Add to Cart</button>
			</form>
		  </div>
		</div>
		
		<% product.images.forEach(function(image){ %>
			<div class="col-sm-6 col-md-4 col-lg-3 d-flex align-items-stretch py-3">
				<div class="card" style="width: 18rem;">
				  <img class="card-img-top" style="height: 15rem;" src="/images/<%= image %>" alt="Card image cap">
			</div>
		<% }) %>
	   </div>
	</div>
</body>
</html>
